# Allow image files to be accessed
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny access to other files (like .php or system files)
<FilesMatch "^.*$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# But allow images
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
